        .gallery-breadcrumb {
            flex-wrap: nowrap;
            overflow-x: auto;
            justify-content: flex-start;
            padding: 20px 0;
            scrollbar-width: none;
            -webkit-overflow-scrolling: touch;
        }
        
        .gallery-breadcrumb::-webkit-scrollbar {
            display: none;
        }
        
        .gallery-breadcrumb .breadcrumb-item.theme-btn {
            padding: 12px 24px;
            font-size: 14px;
        }
    }
    
    @media (max-width:768px) {
