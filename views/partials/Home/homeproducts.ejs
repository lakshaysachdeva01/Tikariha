.service-slider{
    max-width: 1400px;
    margin: 0 auto;
}

    .service-slider-projects .slick-slide {
      margin-left: 15px;
      margin-right: 15px;
    
    }
    .service-projects{
        max-width: 430px;
    }

    
    .project-description-block h1, .project-description-block h2, .project-description-block h3, .project-description-block h4, .project-description-block h5, .project-description-block h6 ,.project-description-block {
                font-size: 16px;
                font-weight: 400 !important;
                font-family: var(--body-font);
                line-height: 26px;
                color: #797e88;
    
            }
    
    
            .project-description-block{
                display: -webkit-box;
                 -webkit-line-clamp: 3;
                  -webkit-box-orient: vertical;
                  
                  overflow: hidden;
                   text-overflow: ellipsis; 
                   }
    
    
    
     strong{
        font-weight: 400 !important;
    }
    
    @media screen and (max-width: 991.98px) {
      .service-slider-projects .slick-slide {
        margin-left: 12px;
        margin-right: 12px;
      }
    
    .page-top{
        margin-top: 60px;
    }
    
    }
    
    </style>