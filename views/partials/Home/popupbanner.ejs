
<div class="popup-overlay" id="popup-overlay">
    <div class="popup-banner">
      <button class="close-button" id="popup-close-btn"><i  class="fa-solid fa-xmark"></i></button>
  
        <!-- Desktop Swiper -->
        <div class="popup-desktop-banner">
            <div class="swiper popup-desktop-swiper" id="popup-desktop-swiper">
                <div class="swiper-wrapper">
                    <% popupbanners.forEach((slide, index) => { %>
                        <div class="swiper-slide popup-slide">
                            <img src="<%= process.env.S3_BASE_URL + slide.desktopbanner %>" alt="<%= slide.title %>"/>
                            
                        </div>
                    <% }) %>
                </div>
                
            </div>
        </div>
  
        <!-- Mobile Swiper -->
        <div class="popup-mobile-banner">
            <div class="swiper popup-mobile-swiper" id="popup-mobile-swiper">
                <div class="swiper-wrapper">
                    <% popupbanners.forEach((slide, index) => { %>
                        <div class="swiper-slide popup-slide">
                            <img src="<%= process.env.S3_BASE_URL + slide.mobileViewBanners %>" alt="<%= slide.title %>"/>

                        </div>
                    <% }) %>
                </div>
                <div class="swiper-pagination popup-pagination-mobile"></div>
               
            </div>
             
        </div>
        
    </div>
  </div>
  
  <!-- Styles -->
  <style>
    .popup-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: rgba(0, 0, 0, 0.8);
        display: none;
        justify-content: center;
        align-items: center;
        z-index: 999999;
        opacity: 0;
        transition: opacity 0.3s ease-in-out;
    }
  
    .popup-banner {
        position: relative;
        width: auto;
        max-width: 90%;
        height: 600px;
        border-radius: 10px;
    }
  
    .close-button{
  background-color: transparent;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 700;
  border:none;
  color: white;
  width: 100%;
  
    }
  
    #popup-close-btn {
        position: absolute;
        top: -15px;
        right: -15px;
        background: rgb(36, 36, 36);
        border: 1px solid white;
        color: white;
  
        height: 35px;
        width: 35px;
        font-size: 20px;
        cursor: pointer;
        padding: 0;
        border-radius: 50%;
        z-index: 1001;
    }
  
    .popup-slide {
        display: flex;
        justify-content: center;
        align-items: center;
    }
  
    .popup-slide img {
        height: 600px;
        width: auto;
        max-width: 100%;
        object-fit: contain;
        border-radius: 12px;
        display: block;
    }
  
    .swiper {
        width: 100%;
        height: 100%;
    }
  
    .popup-desktop-banner {
        display: block;
    }
  
    .popup-mobile-banner {
        display: none;
    }
  
    .swiper-pagination {
        bottom: 10px !important;
    }
  
    @media (max-width: 768px) {
        .popup-desktop-banner {
            display: none;
        }
        
        #popup-close-btn {
    top: -15px;
    right: 5px;
  }
  
        .popup-mobile-banner {
            display: block;
        }
        .popup-banner {
            max-width: 95%;
        }
        
        .popup-slide img {
            height: 100%;
            max-height: 500px;
            width: 100%;
            max-width: 90%;
            justify-content: center;
        }
    }
  </style>
  
  
  
  <!-- Scripts -->
  <script>
  document.addEventListener("DOMContentLoaded", function () {
    // Verify Swiper is loaded
    if (typeof Swiper === 'undefined') {
        console.error('Swiper library not loaded! Check CDN or file path.');
        return;
    }
  
    const popupOverlay = document.getElementById("popup-overlay");
    const popupCloseBtn = document.getElementById("popup-close-btn");
  
    // Pass popupbanners length from server to client
    const popupBannersCount = <%= popupbanners.length %>;
  
    // Initialize Swiper instances
    let desktopSwiper, mobileSwiper;
    function initSwipers() {
        desktopSwiper = new Swiper('#popup-desktop-swiper', {
            slidesPerView: 1,
            loop: true,
            autoplay: {
                delay: 3000,
                disableOnInteraction: false,
            },
            pagination: {
                el: '.popup-pagination-desktop',
                clickable: true,
            },
            on: {
                init: () => console.log('Desktop Swiper initialized'),
                slideChange: () => console.log('Desktop Swiper slide changed')
            }
        });
  
        mobileSwiper = new Swiper('#popup-mobile-swiper', {
            slidesPerView: 1,
            loop: true,
            autoplay: {
                delay: 3000,
                disableOnInteraction: false,
            },
            pagination: {
                el: '.popup-pagination-mobile',
                clickable: true,
            },
            on: {
                init: () => console.log('Mobile Swiper initialized'),
                slideChange: () => console.log('Mobile Swiper slide changed')
            }
        });
    }
  
    // Show popup
    function showPopup() {
        console.log('Showing popup');
        // Disable body scroll
        document.body.style.overflow = 'hidden';
        
        popupOverlay.style.display = "flex";
        setTimeout(() => {
            popupOverlay.style.opacity = "1";
            if (!desktopSwiper || !mobileSwiper) {
                initSwipers();
            } else {
                desktopSwiper.update();
                mobileSwiper.update();
            }
        }, 100);
    }
  
    // Close popup
    function closePopup() {
        console.log('Closing popup');
        // Re-enable body scroll
        document.body.style.overflow = '';
        
        popupOverlay.style.opacity = "0";
        setTimeout(() => {
            popupOverlay.style.display = "none";
            if (desktopSwiper) desktopSwiper.autoplay.stop();
            if (mobileSwiper) mobileSwiper.autoplay.stop();
        }, 300);
        sessionStorage.setItem("popupClosed", "true");
    }
  
    // Check if popup should show
    if (!sessionStorage.getItem("popupClosed") && popupBannersCount > 0) {
        setTimeout(showPopup, 500);
    } else {
        console.log('No popup shown: Either already closed or no banners available');
    }
  
    // Event listeners
    popupCloseBtn.addEventListener("click", closePopup);
    popupOverlay.addEventListener("click", function (e) {
        // Don't close if clicking directly on an image
        if (e.target.tagName === 'IMG') {
            return;
        }
        // Close for any other click (overlay, banner background, etc.)
        closePopup();
    });
  });
  </script>