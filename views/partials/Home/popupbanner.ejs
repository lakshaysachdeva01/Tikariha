<!-- Popup Overlay -->
<div class="popup-overlay" id="popup-overlay">
    <div class="popup-banner">
        <!-- Desktop Swiper -->
        <div class="popup-desktop-banner">
            <div class="swiper popup-desktop-swiper" id="popup-desktop-swiper">
                <div class="swiper-wrapper">
                    <% popupbanners.forEach((slide, index) => { %>
                        <div class="swiper-slide popup-slide">
                            <img src="<%= process.env.S3_BASE_URL + slide.desktopbanner %>" alt="<%= slide.bannerTitle %>"/>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
  
        <!-- Mobile Swiper -->
        <div class="popup-mobile-banner">
            <div class="swiper popup-mobile-swiper" id="popup-mobile-swiper">
                <div class="swiper-wrapper">
                    <% popupbanners.forEach((slide, index) => { %>
                        <div class="swiper-slide popup-slide">
                            <img src="<%= process.env.S3_BASE_URL + slide.mobileViewBanners %>" alt="<%= slide.bannerTitle %>"/>
                        </div>
                    <% }) %>
                </div>
                <div class="swiper-pagination popup-pagination-mobile"></div>
            </div>
        </div>
        <button class="close-button" id="popup-close-btn">C L O S E</button>
    </div>
  </div>
  
  <!-- Styles -->
  <style>
    .popup-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.8);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 999999;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s ease;
    }
  
    .popup-overlay.show {
        opacity: 1;
        visibility: visible;
    }
  
    .popup-banner {
        position: relative;
        width: auto;
        max-width: 90%;
        max-height: 80vh;
        border-radius: 10px;
    }
  
    .close-button {
        background-color: transparent;
        text-align: center;
        border: none;
        color: white;
        width: 100%;
        margin: 20px 0;
        cursor: pointer;
        font-size: 16px;
        font-weight: bold;
        letter-spacing: 2px;
    }
  
    .popup-slide img {
        max-height: 600px;
        width: auto;
        max-width: 100%;
        object-fit: contain;
    }
  
    .popup-desktop-banner {
        display: block;
    }
  
    .popup-mobile-banner {
        display: none;
    }
  
    body.popup-active {
        overflow: hidden !important;
    }
  
    @media (max-width: 768px) {
        .popup-desktop-banner {
            display: none;
        }
        .popup-mobile-banner {
            display: block;
        }
        .popup-banner {
            max-width: 95%;
        }
    }
  </style>
  
  <script>
  document.addEventListener("DOMContentLoaded", function () {
    const popupOverlay = document.getElementById("popup-overlay");
    const closeBtn = document.getElementById("popup-close-btn");
    
    // Get banners count directly
    const bannersCount = <%= popupbanners ? popupbanners.length : 0 %>;
    console.log('Banners count:', bannersCount);
    
    // Check if popup should show
    if (bannersCount > 0 && !sessionStorage.getItem("popupClosed")) {
      // Block scrolling
      document.body.classList.add('popup-active');
      
      // Show popup immediately
      setTimeout(() => {
        popupOverlay.classList.add('show');
        
        // Initialize swipers if needed
        if (typeof Swiper !== 'undefined' && bannersCount > 1) {
          new Swiper('#popup-desktop-swiper', {
            slidesPerView: 1,
            autoplay: { delay: 3000 }
          });
          
          new Swiper('#popup-mobile-swiper', {
            slidesPerView: 1,
            autoplay: { delay: 3000 },
            pagination: { el: '.popup-pagination-mobile', clickable: true }
          });
        }
      }, 100);
    }
    
    // Close button click
    if (closeBtn) {
      closeBtn.onclick = function() {
        popupOverlay.classList.remove('show');
        document.body.classList.remove('popup-active');
        sessionStorage.setItem("popupClosed", "true");
      };
    }
    
    // Close when clicking outside
    popupOverlay.onclick = function(e) {
      if (e.target === popupOverlay) {
        popupOverlay.classList.remove('show');
        document.body.classList.remove('popup-active');
        sessionStorage.setItem("popupClosed", "true");
      }
    };
  });
  </script>