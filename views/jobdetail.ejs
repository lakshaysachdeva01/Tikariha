<script>
// Custom file upload
document.addEventListener('DOMContentLoaded', function() {
    const resumePlaceholder = document.getElementById('resumePlaceholder');
    if (resumePlaceholder) {
        resumePlaceholder.addEventListener('click', function() {
            document.querySelector('input[name="resume"]').click();
        });
        
        document.querySelector('input[name="resume"]').addEventListener('change', function() {
            if (this.files && this.files[0]) {
                resumePlaceholder.value = this.files[0].name;
            } else {
                resumePlaceholder.value = '';
            }
        });
    }
});

// Job Application Form Submission
document.getElementById('jobApplicationForm').addEventListener('submit', async function (e) {
    e.preventDefault();

    const submitBtn = document.getElementById('jobApplicationSubmitBtn');
    const btnText = document.getElementById('jobApplicationBtnText');
    const loader = document.getElementById('jobApplicationSubmitLoader');

    try {
        const API_BASE_URL = "<%= API_BASE_URL %>";
        const websiteID = "<%= websiteID %>";
        
        const UPLOAD_FILES_END_POINT = `${API_BASE_URL}/third-party/file-upload/upload-files/${websiteID}`;
        const CREATE_JOB_APPLICATION_END_POINT = `${API_BASE_URL}/website/${websiteID}/service-enquiry/create`;

        // Show loader
        btnText.style.display = 'none';
        loader.style.display = 'inline-block';
        submitBtn.disabled = true;

        // 1. Upload File
        const uploadFileData = new FormData();
        const fileInput = this.querySelector('input[name="resume"]').files[0];

        if (!fileInput) {
            throw new Error("Please upload a resume file.");
        }

        uploadFileData.append("attachresume", fileInput);

        const fileUploadResponse = await fetch(UPLOAD_FILES_END_POINT, {
            method: "POST",
            body: uploadFileData,
        });

        if (!fileUploadResponse.ok) {
            throw new Error(`File upload failed! Status: ${fileUploadResponse.status}`);
        }

        const fileUploadData = await fileUploadResponse.json();
        
        let uploadedResume = "";
        if (fileUploadData?.data?.fileNames && fileUploadData.data.fileNames.length > 0) {
            uploadedResume = fileUploadData.data.fileNames[0];
        }

        if (!uploadedResume) {
            throw new Error("File upload did not return a valid file name.");
        }

        // 2. Prepare Payload - Get experience from dropdown
        const payload = {
            name: this.querySelector('input[name="name"]').value,
            contactNo: this.querySelector('input[name="contactNo"]').value,
            emailId: this.querySelector('input[name="emailId"]').value,
            experience: "3_TO_5_YEARS",
            resume: uploadedResume,
            appliedFor: this.querySelector('input[name="appliedFor"]').value
        };

        console.log("Payload being sent:", payload);

        // 3. Submit Form
        const response = await fetch(CREATE_JOB_APPLICATION_END_POINT, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(payload),
        });

        if (!response.ok) {
            const errorData = await response.json().catch(() => ({}));
            throw new Error(`Form submission failed! Status: ${response.status}. ${errorData.message || ''}`);
        }

        const data = await response.json();
        console.log("Success response:", data);

        // Redirect to thank you page
        sessionStorage.setItem("thankYouMessage", "We've Received Your Application and will Reach out to you soon");
        window.location.href = "/thankyou";
        
    } catch (error) {
        console.error("Form submission error:", error);
        btnText.style.display = 'inline';
        loader.style.display = 'none';
        submitBtn.disabled = false;
        
        const formMessage = document.querySelector('.form-messege');
        if (formMessage) {
            formMessage.textContent = error.message || "An error occurred. Please try again.";
            formMessage.style.color = "#dc3545";
            formMessage.classList.add('error');
        }
    }
});
</script>

