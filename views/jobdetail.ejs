<%- include('header'), {seoDetails} %>
<div id="smooth-wrapper">
    <div id="smooth-content">
        <main  style="padding: 180px 0 0px;">
            <!--======  Start Page Hero Section  ======-->
           
<% if (job) { %>
<!-- Job Details -->
<section id="jobDetails" class="job-details pt-60 ">
    <div class="container">
        <div class="row">
            <!-- Full Width Content -->
            <div class="col-sm-12 col-md-12 col-lg-10 offset-lg-1">
                <div class="job-detail-content">
                    <!-- Job Header -->
                    <div class="job-header">
                        <!-- Job Tags -->
                        <div class="job-tags" style="color: var(--primary-color);">
                            <% if (job.category?.name) { %>
                            <span class="job-tag"><%= job.jobPosition %></span>
                            <% } %>
                            <% if (job.type) { %>
                            <span class=""><%= job.type.replace('_', ' ') %></span>
                            <% } %>
                        </div>
                        
                        <h1 class="job-title"><%= job.jobTitle %></h1>
                        <% if (job.subTitle) { %>
                        <p class="job-subtitle"><%= job.subTitle %></p>
                        <% } %>
                        
                        <!-- Key Details -->
                        <div class="job-key-details">
                            <div class="detail-item">
                                <span class="detail-label">Location</span>
                                <span class="detail-value">
                                    <%= job.jobLocation %>
                                </span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Experience</span>
                                <span class="detail-value"><%= job.experienceRequired.replace(/_/g, ' ') || '' %></span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Qualification</span>
                                <span class="detail-value"> <%= job.qualreq %></span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Salary Range</span>
                                <span class="detail-value"><%=job.salaryRange %> </span>
                            </div>
                        </div>
                    </div>

                    <!-- Dynamic Job Description Sections -->
                    <% if (job.jobDescription && job.jobDescription.length > 0) { %>
                        <% job.jobDescription.forEach((section, index) => { %>
                            <div class="job-section">
                                <% if (section.singleImage) { %>
                                    <!-- Single Image Section -->
                                    <div class="job-image-section">
                                        <% if (section.singleImage.image) { %>
                                            <div class="job-single-image">
                                                <img src="<%= process.env.S3_BASE_URL + section.singleImage.image %>" alt="Job Image <%= index + 1 %>" class="img-fluid" style=" object-fit: contain;">
                                            </div>
                                        <% } %>
                                        <% if (section.description) { %>
                                            <div class="job-description">
                                                <%- section.description %>
                                            </div>
                                        <% } %>
                                    </div>
                                <% } else if (section.multipleImages) { %>
                                    <!-- Multiple Images Section -->
                                    <div class="job-image-section">
                                        <% if (section.multipleImages && section.multipleImages.length > 0) { %>
                                            <div class="job-multiple-images">
                                                <div class="row">
                                                    <% section.multipleImages.forEach((image, imgIndex) => { %>
                                                        <div class="col-md-4 col-sm-6 mb-4">
                                                            <div class="job-image-thumbnail">
                                                                <img src="<%= process.env.S3_BASE_URL + image %>" alt="Job Image <%= imgIndex + 1 %>" class="img-fluid" style="height: 280px; object-fit: cover; width: 100%; border-radius: 8px;">
                                                            </div>
                                                        </div>
                                                    <% }); %>
                                                </div>
                                            </div>
                                        <% } %>
                                        <% if (section.description) { %>
                                            <div class="job-description">
                                                <%- section.description %>
                                            </div>
                                        <% } %>
                                    </div>
                                <% } else if (section.description) { %>
                                    <!-- Text Only Section -->
                                    <div class="job-section">
                                        <div class="job-description">
                                            <%- section.description %>
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                        <% }); %>
                    <% } else if (job.description) { %>
                        <!-- Fallback to old description field -->
                        <div class="job-section">
                            <h3 class="job-section-title">Job Description</h3>
                            <div class="job-description">
                                <%- job.description %>
                            </div>
                        </div>
                    <% } %>

                  
                    <!-- Job Application Form -->
                    <section class="renvia-contact_three pt-80 pb-120">
                        <div class="container">
                            <div class="contact-wrapper" data-aos="fade-up" data-aos-duration="1000">
                                <h3>Apply for this Position</h3>
                                <form id="jobApplicationForm" class="contact-form" method="POST">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                              
                                                <input type="text" class="form_control" placeholder="Full Name*" name="name" required>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                              
                                                <input type="tel" class="form_control" placeholder="Contact Number*" name="contactNo" 
                                                       pattern="[0-9]{10}" 
                                                       maxlength="10" 
                                                       minlength="10" 
                                                       title="Please enter exactly 10 digits" 
                                                       required
                                                       oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0, 10);">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                           
                                                <input type="email" class="form_control" placeholder="Email Address*" name="emailId" required>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                              
                                                <div class="file-upload-wrapper">
                                                    <input type="file" class="form_control" id="resumeUpload" name="resume" accept=".pdf,.doc,.docx" required style="display: none;">
                                                    <input type="text" class="form_control" id="resumePlaceholder" placeholder="Upload Resume*" readonly style="cursor: pointer; background-color: #fff;">
                                                </div>
                                            </div>
                                        </div>
                                        <!-- <div class="col-lg-6">
                                               
                                                <select  name="experience" required>
                                                    <option value="">Select Experience*</option>
                                                    <option value="FRESHER">Fresher</option>
                                                    <option value="LESS_THAN_1_YEAR">Less than 1 year</option>
                                                    <option value="1_TO_3_YEARS">1 to 3 years</option>
                                                    <option value="3_TO_5_YEARS">3 to 5 years</option>
                                                    <option value="5_TO_8_YEARS">5 to 8 years</option>
                                                    <option value="8_TO_10_YEARS">8 to 10 years</option>
                                                    <option value="10_TO_12_YEARS">10 to 12 years</option>
                                                    <option value="12_PLUS_YEARS">12+ years</option>
                                                </select>
                                          
                                        </div> -->
                                        <div class="col-lg-6" style="display: none;">
                                            <div class="form-group">
                                            
                                                <input type="text" class="form_control" placeholder="Applying for: <%= job.jobTitle %>" value="<%= job.jobTitle %>" readonly style="background-color: #f8f9fa;">
                                                <input type="hidden" name="appliedFor" value="<%= job._id %>">
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                              
                                                <textarea class="form_control" placeholder="Tell us about yourself and why you're interested in this position (Optional)" name="message" rows="5" cols="8"></textarea>
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="form-group text-center">
                                                <button class="theme-btn style-one" type="submit" id="jobApplicationSubmitBtn">
                                                    <span id="jobApplicationBtnText">Submit Application</span>
                                                    <span class="submit-loader" id="jobApplicationSubmitLoader" style="display: none;">
                                                        <i class="far fa-spinner fa-spin"></i>
                                                    </span>
                                                    <i class="far fa-arrow-right"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                <p class="form-messege mt-3 text-center"></p>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>
<% } else { %>
<!-- Job Not Found -->
<section id="jobNotFound" class="job-not-found pt-120 pb-120">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 text-center">
                <div class="not-found-content">
                    <i class="fa fa-briefcase" style="font-size: 64px; color: #ccc; margin-bottom: 30px;"></i>
                    <h2>Job Not Found</h2>
                    <p>The job you're looking for doesn't exist or has been removed.</p>
                    <a href="/jobs" class="btn btn__primary">View All Jobs</a>
                </div>
            </div>
        </div>
    </div>
</section>
<% } %>
        </main>

