<%- include('header'), {seoDetails} %>

<div id="smooth-wrapper">
    <div id="smooth-content">
        <main id="top-180-90" style="padding-bottom: 0;">
          
            <section class="renvia-service_one gray-bg pt-120  pb-80" data-src="assets/images/home-one/bg/service-bg.jpg"   style="margin-top: -180px;" >
                <div class="container-fluid pt-60 page-top">
                 
                    <!-- Service Slider -->
                    <div class="service-slider-projects container col-12" data-aos="fade-down" data-aos-duration="1000">
                        <!-- Renvia Service Card -->
                        <% if (projects && projects.length > 0) { %>
                 
                            <% projects.forEach((project, index) => { %>
                                
                                <%
                                const titleCase = (str) =>
                                  str
                                    .replace(/_/g, ' ')
                                    .toLowerCase()
                                    .replace(/\b\w/g, char => char.toUpperCase());
                              %>
                              
                        <div class="renvia-service-card col-sm-12 style-one " onclick="window.location.href='/project/<%= project.seoConfig.slug %>'">
                            <div class="content">
                                <div class="title-wrap" style="margin-bottom: 20px; padding-bottom: 20px;">
                                    <div style="display: flex; align-items: center; justify-content: center; gap: 15px;">
                                        <img src="<%= process.env.S3_BASE_URL + project.projectLogo %>" style="height: 51px; width: 51px; object-fit: contain; border-radius: 100%;" alt="<%= project.projectName %>">
                                        <div style="display: flex; flex-direction: column;">
                                            <h4><a href="/project/<%= project.seoConfig.slug %>"><%= project.projectName %></a></h4>
                                            <p style="margin-bottom: 0px;"><%= titleCase(project.locality) %>, <%= titleCase(project.city) %></p>
                                        </div>
                                       
                                    </div>
                                  
                                    <a href="/project/<%= project.seoConfig.slug %>" class="icon-btn"><i class="far fa-arrow-right"></i></a>
                                </div>

                              <div class="project-description-block" style="margin-bottom: 22px; height: 81px; overflow: hidden;">
<%- project.projectDescrpition[0].description %>
                              </div>
                              
                             
                               <!-- <p><%= project.reraNo %></p> -->
                                <img class="imgproject" src="<%= process.env.S3_BASE_URL + project.listingBanner %>" alt="<%= project.projectName %>">
                            </div>
                        </div>
                        <% }) %>
                        <!-- Renvia Service Card -->
                       <% } %>
                    </div>
                </div>
            </section>
        </main>

<%- include('footer') %>

<style>
    

.service-slider-projects .slick-slide {
  margin-left: 15px;
  margin-right: 15px;

}

.project-description-block h1, .project-description-block h2, .project-description-block h3, .project-description-block h4, .project-description-block h5, .project-description-block h6 ,.project-description-block {
            font-size: 16px;
            font-weight: 400 !important;
            font-family: var(--body-font);
            line-height: 26px;
            color: #797e88;

        }


        .project-description-block{
            display: -webkit-box;
             -webkit-line-clamp: 3;
              -webkit-box-orient: vertical;
              
              overflow: hidden;
               text-overflow: ellipsis; 
               }



 strong{
    font-weight: 400 !important;
}

@media screen and (max-width: 991.98px) {
  .service-slider-projects .slick-slide {
    margin-left: 12px;
    margin-right: 12px;
  }

.page-top{
    margin-top: 60px;
}

}

</style>


<style>
    .imgproject{
        
        height: 220px;
    }


.service-slider-projects{
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
} 


@media (max-width:1200px) {
    .service-slider-projects{
        grid-template-columns: repeat(2, 1fr);
    }
}
@media (max-width:640px) {
    .service-slider-projects{
        grid-template-columns: repeat(1, 1fr);
    }
}

    @media (max-width:768px) {
         .imgproject{
            height: 180px;
         }
    }

</style>